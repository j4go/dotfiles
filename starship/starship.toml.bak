add_newline = false
command_timeout = 1000
format = "$username$hostname$directory$git_branch$git_state$git_status$nix_shell$cmd_duration$character"

[character]
error_symbol = "[✖](bold red)"
success_symbol = "[➜](bold green)"

[directory]
format = "[$path]($style) "
style = "bold cyan"
truncation_length = 2

[git_branch]
format = "[$symbol$branch]($style) "
style = "bold purple"
symbol = " "

[git_status]
format = "[$all]($style) "
style = "bold red"
up_to_date = "[✓](bold green)"

[hostname]
disabled = false
format = "[$ssh_symbol$hostname]($style) "
ssh_only = true
ssh_symbol = " "
style = "bold #ffaf00"

[nix_shell]
format = "[$symbol(nix-shell)]($style) "
style = "bold blue"
symbol = "❄️ "

[package]
disabled = true

[time]
disabled = true

[username]
disabled = false
format = "[$user]($style) @"
show_always = false
style_user = "white dim"

