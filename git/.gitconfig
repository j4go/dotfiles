[user]
    # 用户身份信息
    name = j4go
    email = yianny@163.com

[http]
    # 彻底关闭 SSL 证书校验（通常用于解决公司内网自签名证书导致的报错）
    sslverify = false
    # 设置大文件上传缓冲区大小（约 900MB），防止推送大文件时因 RPC 限制导致失败
    postBuffer = 957286400
    # 全局网络代理，加速访问 GitHub
    proxy = http://127.0.0.1:10808

[filter "lfs"]
    # Git LFS (Large File Storage) 配置，用于管理仓库中的二进制大文件
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process

[core]
    # 换行符处理：设为 false 表示不对换行符进行自动转换，保持文件原始状态
    autocrlf = false
    # 防止中文路径显示为转义后的八进制字符，让中文文件名正常显示
    quotepath = false
    # 冲突标记风格：zdiff3 会在冲突时显示“我的修改”、“原始代码”和“他们的修改”，更易于比对
    conflictstyle = zdiff3
    # 严格区分文件名大小写，避免在 Windows/macOS 上出现因大小写导致的文件冲突
    ignorecase = false

[init]
    # 初始化的默认分支名设为 main (符合现代主流规范)
    defaultBranch = main

[color]
    # 在终端输出中启用彩色高亮，提升可读性
    ui = true

[pull]
    # 执行 pull 时默认使用 rebase 模式，保持提交历史呈线性，避免产生冗余的 Merge commit
    rebase = true

[push]
    # 只有当前分支与远程分支名完全一致时才允许 push，防止推错分支
    default = current
    # 每次 push 时自动携带本地标签（Tags），无需手动执行 --tags
    followTags = true

[fetch]
    # 在拉取远程代码时，自动清理本地那些在远程已经不存在的冗余分支
    prune = true

[alias]
    # --- 基础快捷命令 ---
    st = status        # 查看当前状态
    co = checkout      # 切换分支/恢复文件
    ci = commit        # 提交代码
    br = branch        # 管理分支
    unstage = reset HEAD --  # 撤销已 add 但未 commit 的文件
    last = log -1 HEAD       # 查看最近一次提交的详细信息
    
    # --- 高级 Log 视图 ---
    # 宇宙级 Log 命令：带分支拓扑图、彩色高亮、精简显示提交人与时间
    # lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    # commit 信息左对齐
    lg = log --graph --pretty=format:'%C(bold yellow)%h%Creset %C(magenta)-%Creset %s %C(auto)%d%Creset %C(dim white)(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit

[help]
    # 自动纠正命令拼写错误。设置为 prompt 会在输入错误命令（如 stauts）时询问是否执行最接近的正确命令
    autocorrect = prompt
